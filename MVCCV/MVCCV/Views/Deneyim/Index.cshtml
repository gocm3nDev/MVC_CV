@using MVCCV.Models.Entity
@model List<TBL_EXP>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Deneyim Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Başlık</th>
        <th>Alt Başlık</th>
        <th>Tarih</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
    <tr>
        <th>@item.ID</th>
        <th>@item.Header</th>
        <th>@item.LowerHeader</th>
        <th>@item.Date</th>
        <th><a href="/Deneyim/DeneyimSil/@item.ID" class="btn btn-danger">Sil</a></th>
        <th><a href="/Deneyim/DeneyimGetir/@item.ID" class="btn btn-primary">Düzenle</a></th>
    </tr>       
    }
</table>

<a href="/Deneyim/DeneyimEkle/" class="btn btn-success">Yeni Deneyim Ekle</a>