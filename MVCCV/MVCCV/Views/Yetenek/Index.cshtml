@using MVCCV.Models.Entity
@model List<TBL_SKILLS>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{string color = ""; }
@{string badgeColor = ""; }

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <br />
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Yetenek Listem</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <a href="/Yetenek/YeniYetenek/" class="btn btn-success">
                                    <i class="fas fa-folder"></i>
                                Yetenek Ekle
                                </a>
                                <br />
                                <br />
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">#</th>
                                            <th>Yetenek</th>
                                            <th>Derece</th>
                                            <th style="width: 40px">Oran</th>
                                           <th>Sil</th>
                                           <th>Düzenle</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            if(item.Ratio >= 0 && item.Ratio <= 50)
                                            {
                                                color = "progress-bar bg-danger";
                                                badgeColor = "badge bg-danger";
                                            }
                                            if (item.Ratio >= 51 && item.Ratio <= 70)
                                            {
                                                color = "progress-bar bg-warning";
                                                badgeColor = "badge bg-warning";
                                            }
                                            if (item.Ratio >= 71 && item.Ratio <= 84)
                                            {
                                                color = "progress-bar bg-primary";
                                                badgeColor = "badge bg-primary";
                                            }
                                            if (item.Ratio >= 85 && item.Ratio <= 100)
                                            {
                                                color = "progress-bar bg-success";
                                                badgeColor = "badge bg-success";
                                            }
                                        <tr>
                                            <td>@item.ID</td>
                                            <td>@item.Skills</td>
                                            <td>
                                                <div class="progress progress-xs">
                                                    <div class="@color" style="width: @item.Ratio%"></div>
                                                </div>
                                            </td>
                                            <td><span class="@badgeColor">@item.Ratio%</span></td>
                                            <td>
                                                <a href="/Yetenek/YetenekSil/@item.ID" class="btn btn-danger">
                                                    <i class="fas fa-trash"></i>
                                                    Sil
                                                </a>
                                            </td>
                                            <td>
                                                <a href="/Yetenek/YetenekDuzenle/@item.ID" class="btn btn-info">
                                                    <i class="fas fa-pen"></i>
                                                    Düzenle
                                                </a>
                                            </td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <!-- /.card -->
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>
</body>
</html>