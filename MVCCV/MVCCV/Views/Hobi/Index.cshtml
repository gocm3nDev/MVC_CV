@using MVCCV.Models.Entity
@model List<TBL_HOBIES>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Hobi Düzenleme Sekmesi</h2>
<br />
<form method="post">
    @foreach (var item in Model)
    {
        <label>Açıklama 1</label>
        <textarea rows="8" class="form-control" name="Description1">@item.Description1</textarea>
        <label>Açıklama 2</label>
        <textarea rows="8" class="form-control" name="Description2">@item.Description2</textarea>
    }
    <br />
    <button class="btn btn-info">Güncelle</button>
</form>