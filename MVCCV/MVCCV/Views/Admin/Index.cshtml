@using MVCCV.Models.Entity
@model List<TBL_ADMIN>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Admin Şifre Değiştirme Paneli</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kullanıcı Adı</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.ID</th>
            <th>@item.Username</th>
            <th><a href="/Admin/AdminSil/@item.ID" class="btn btn-danger">Sil</a></th>
            <th><a href="/Admin/AdminDuzenle/@item.ID" class="btn btn-warning">Düzenle</a></th>
        </tr>

    }
</table>

<a href="/Admin/AdminEkle/" class="btn btn-success">Yeni Admin Ekle</a>

